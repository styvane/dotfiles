theme = "light:Monokai Pro Light, dark:zenbones_light"

# Set font parameters.
font-family = ""
font-family = "Monolisa Variable"
font-feature = zero ss02 on
font-size = 14
font-style = Medium

# Remove window title
title = " "

# Set window height to 40 and width to 200
window-height = 40
window-width = 200
# Set window padding to 13
window-padding-x = 17
window-padding-y = 19
# Extends window color
window-padding-color = extend

# Inherit working directory
window-inherit-working-directory = true

# Quit after the last surface is closed
quit-after-last-window-closed = true
# Put terminal in center on startup
quick-terminal-position = center

# Disable cursor blinking
cursor-style-blink = false
# Set cursor color
cursor-color = #FF0000

# Hide mouse while typing
mouse-hide-while-typing = true
# Select the pane that is focused.
focus-follows-mouse = true
# Do not blur unfocused pane
unfocused-split-opacity = 1

# Allow read/write for clipboard
clipboard-read = allow
clipboard-write = allow
clipboard-trim-trailing-spaces = true
copy-on-select = clipboard

# Rebind horizontal and vertical split keys
keybind = ctrl+x>v=new_split:right
keybind = ctrl+x>-=new_split:down
keybind = cmd+d=unbind
keybind = shift+cmd+d=unbind

# Make `Ctrl+B R` reload the config file
keybind = super+r=reload_config
keybind = shift+cmd+,=unbind

# Set split direction
keybind = super+left=goto_split:left
keybind = super+right=goto_split:right
keybind = super+up=goto_split:top
keybind = super+down=goto_split:bottom

split-divider-color = #780000
